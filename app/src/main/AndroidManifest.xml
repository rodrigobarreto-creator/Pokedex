<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.interfazprueba">

    <!-- Permisos actualizados -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/pokemon_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pokemon_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.InterfazPrueba"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras actividades -->
        <activity android:name=".PokedexActivity" />
        <activity android:name=".PokemonDetailActivity" />
        <activity android:name=".GameActivity" />
        <activity android:name=".ResultActivity" />

        <!-- EscÃ¡ner -->
        <activity
            android:name=".scanner.ScannerActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>
</manifest>
