<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Imagen de fondo principal -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.2"
        android:src="@drawable/pokemon_logo" />

    <!-- BotÃ³n Volver SIN FONDO -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:text="â† Volver"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:padding="12dp"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PokÃ©ddle"
                android:textColor="@color/pokemon_yellow"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <!-- Contador de intentos CON FORMATO AZUL -->
            <TextView
                android:id="@+id/attemptsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/10"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/button_pokemon_blue"
                android:padding="6dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Pista -->
        <TextView
            android:id="@+id/hintTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/pokemon_yellow"
            android:textSize="10sp"
            android:background="@color/pokemon_red"
            android:padding="6dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:gravity="center"
            android:textStyle="italic" />

        <!-- Grid Container con imÃ¡genes alrededor -->
        <LinearLayout
            android:id="@+id/gridContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/card_red_rounded"
            android:padding="8dp"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Imagen superior -->
            <ImageView
                android:id="@+id/topPokemonImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:scaleType="fitCenter"
                android:alpha="0.9"
                android:visibility="visible" />

            <!-- SOLO EL GRIDLAYOUT - LOS TÃTULOS SE AGREGARÃN PROGRAMÃTICAMENTE -->
            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="5"
                android:rowCount="11" /> <!-- 10 filas de datos + 1 fila de tÃ­tulos -->

            <!-- Imagen inferior -->
            <ImageView
                android:id="@+id/bottomPokemonImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitCenter"
                android:alpha="0.9"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Input Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:background="@drawable/card_red_rounded"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingresa PokÃ©mon, Tipo, Color o GeneraciÃ³n:"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <EditText
                    android:id="@+id/inputEditText"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Ej: PIKACHU, FUEGO, AZUL, 1"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:maxLength="12"
                    android:background="@android:color/white"
                    android:padding="8dp"
                    android:layout_marginEnd="6dp"
                    android:singleLine="true" />

                <!-- BOTÃ“N ENVIAR -->
                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="ENVIAR"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_pokemon_blue"
                    android:layout_marginEnd="4dp"
                    android:padding="4dp" />

                <!-- BOTÃ“N PISTA -->
                <Button
                    android:id="@+id/hintButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸ’¡"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:background="@drawable/button_pokemon_blue"
                    android:padding="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>