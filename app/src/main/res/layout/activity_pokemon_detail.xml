<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokedex_background_soft"
    android:padding="0dp">

    <!-- Fondo con patrón sutil -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.05"
        android:src="@drawable/pokemon_pattern_soft" />

    <!-- Header con gradiente rojo -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/header_gradient_soft"
        android:elevation="6dp"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Botón regresar -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/button_circle_soft"
            android:src="@drawable/ic_back_soft"
            android:layout_marginEnd="16dp" />

        <!-- Título -->
        <TextView
            android:id="@+id/textNameNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="#001 Bulbasaur"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:shadowColor="#88000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

    </LinearLayout>

    <!-- ScrollView principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_container"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tarjeta de información básica -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/pokemon_card_background_soft">

                    <!-- Imagen del Pokémon -->
                    <ImageView
                        android:id="@+id/imagePokemon"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter" />

                    <!-- Contenedor de tipos -->
                    <LinearLayout
                        android:id="@+id/types_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp" />

                    <!-- Descripción -->
                    <TextView
                        android:id="@+id/textDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descripción del Pokémon..."
                        android:textColor="#D32F2F"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de características físicas -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/pokemon_card_background_soft">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Características Físicas"
                        android:textColor="#D32F2F"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp" />

                    <!-- Altura y Peso -->
                    <TextView
                        android:id="@+id/textHeightWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Altura: 0.0 m / Peso: 0.0 kg"
                        android:textColor="#D32F2F"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <!-- Habilidades -->
                    <TextView
                        android:id="@+id/textAbilities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Habilidades: ..."
                        android:textColor="#D32F2F"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de estadísticas -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/pokemon_card_background_soft">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estadísticas Base"
                        android:textColor="#D32F2F"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp" />

                    <!-- Contenedor de stats -->
                    <LinearLayout
                        android:id="@+id/statsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de evoluciones -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/pokemon_card_background_soft">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Línea Evolutiva"
                        android:textColor="#D32F2F"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp" />

                    <!-- Contenedor horizontal para evoluciones -->
                    <LinearLayout
                        android:id="@+id/evolutionsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de Mega Evolución -->
            <androidx.cardview.widget.CardView
                android:id="@+id/megaContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/pokemon_card_background_soft">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mega Evolución"
                        android:textColor="#D32F2F"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp" />

                    <!-- Imagen Mega -->
                    <ImageView
                        android:id="@+id/imageMega"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center" />

                    <!-- Habilidades Mega -->
                    <TextView
                        android:id="@+id/textMegaAbilities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Habilidades: ..."
                        android:textColor="#D32F2F"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                    <!-- Stats Mega -->
                    <LinearLayout
                        android:id="@+id/megaStatsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de movimientos -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/pokemon_card_background_soft">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Movimientos"
                        android:textColor="#D32F2F"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp" />

                    <!-- Movimientos -->
                    <TextView
                        android:id="@+id/textMoves"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Movimientos: ..."
                        android:textColor="#D32F2F"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>